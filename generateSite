echo -e '\033[33m Important note: Script expects resource and scripts files from Gem TD vpk to be copied in GemTD-Generation folder. \033[0m ' 

echo -e '\033[32m Pillar files generation \033[0m' 
cd GemTD-Generation
bash pharo Pharo.image eval 'GemTDGod new process'

echo -e '\033[32m Copying generated pillar files for html page generation \033[0m' 
cp export/*.pillar ../GemTD-Site/

echo -e '\033[32m Html page generation \033[0m' 
cd ../GemTD-Site/
../ecstatic generate

echo -e '\033[32m Temp copy of generated files on desktop for gh-pages push \033[0m' 
mkdir ~/Desktop/TMP_GemTD_HTML
cp _site/*.html ~/Desktop/TMP_GemTD_HTML

echo -e '\033[32m Pushing code on master branch \033[0m' 
cd ..
git add -u
git commit -m 'Automatic update ~ new sources'
git push origin master

echo -e '\033[32m Switching to deployment branch \033[0m' 
git checkout gh-pages
cp ~/Desktop/TMP_GemTD_HTML/*.html .

echo -e '\033[32m Pushing deployment code \033[0m' 
git add -u
git commit -m 'Automatic update ~ new sources'
git push origin gh-pages

echo -e '\033[32m Switch back to master for further developments \033[0m' 
git checkout master

echo -e '\033[32m Remove temp folder \033[0m' 
rm -r ~/Desktop/TMP_GemTD_HTML
